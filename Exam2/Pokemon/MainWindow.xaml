<Window x:Class="Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstPokemon" HorizontalAlignment="Left" Height="284" Margin="49,82,0,0" VerticalAlignment="Top" Width="182" SelectionChanged="LstPokemon_SelectionChanged"/>
        <TextBlock x:Name="txtPokemonInfo" HorizontalAlignment="Left" Margin="481,82,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="284" Width="286"/>
        <Button x:Name="btnGetMoreInfo" Content="More Info" HorizontalAlignment="Left" Margin="303,193,0,0" VerticalAlignment="Top" Width="75" Click="BtnGetMoreInfo_Click"/>

    </Grid>
</Window>
